//1. Even or Odd
//https://www.codewars.com/kata/53da3dbb4a5168369a0000fe/train/javascript
function even_or_odd(number) {
    let e = "Even";
    let o = "Odd";
    let a = number % 2;
    if (a == 0){
        return e;
    } else {
        return o;
    }
}

//2.Enumerable Magic #25 - Take the First N Elements
//https://www.codewars.com/kata/545afd0761aa4c3055001386/train/javascript
function take(arr, n) {
    let x = arr.slice(0,n);
    return x;
}

//3.Simple multiplication
//https://www.codewars.com/kata/583710ccaa6717322c000105/train/javascript
function simpleMultiplication(number) {
    if(number%2 == 0){
        number = number * 8;
    } else {
        number = number * 9;
    }
    return number;
}

//4.Function 1 - hello world
//https://www.codewars.com/kata/523b4ff7adca849afe000035/train/javascript
function greet(){
    var a = "hello world!";
    return a;
}

//5.Function 2 - squaring an argument
//https://www.codewars.com/kata/523b623152af8a30c6000027/train/javascript
function square(edge){
    var sq = edge * edge;
    return sq;
}

//6.Define a card suit
//https://www.codewars.com/kata/5a360620f28b82a711000047/train/javascript
function defineSuit(card) {
    var le = (card.length-1);
    var su = card[le];
    if (su == "♣"){
        return "clubs";
    } else if (su == "♦"){
        return "diamonds";
    } else if (su == "♥"){
        return "hearts";
    } else if (su == "♠"){
        return "spades";
    } else {
        return "unknown card type";
    }
}

//7.Grasshopper - Debug sayHello
//https://www.codewars.com/kata/5625618b1fe21ab49f00001f/train/javascript
function sayHello(name) {
    return 'Hello,'+' '+name
}

//8.Convert a Boolean to a String
//https://www.codewars.com/kata/551b4501ac0447318f0009cd/train/javascript
function booleanToString(b){
    var str = "";
    str = str + b;
    return str;
}