//29.Abbreviate a Two Word Name
//https://www.codewars.com/kata/57eadb7ecd143f4c9c0000a3/train/javascript
function abbrevName(name){
    var a = name[0]+".";
    var b = "";
    console.log(a);
    for(i=0;i<name.length;i++){
        if(name[i] == " "){
            b = a+name[i+1];
        }
    }
    return b.toUpperCase();
}

