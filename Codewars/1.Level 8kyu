function numberToString(num) {
    var v = "";
    v += num;
    return v;
}

//16.String repeat
//https://www.codewars.com/kata/57a0e5c372292dd76d000d7e/train/javascript
function repeatStr (n, s) {
    var t = "";
    for (i=0;i<n;i++){
        t += s;
        console.log(s);
    }
    return t;
}

//17.Remove First and Last Character
//https://www.codewars.com/kata/56bc28ad5bdaeb48760009b0/train/javascript
function removeChar(str){
    var n = "";
    for(i=0;i<str.length;i++){
        if(i>0 && i<str.length-1){
            n += str[i];
        }
    }
    return n;
};

//18.Find the smallest integer in the array
//https://www.codewars.com/kata/55a2d7ebe362935a210000b2/train/javascript
class SmallestIntegerFinder {
    findSmallestInt(args) {
        var d = args[0];
        for (var i=1;i<args.length;i++){
            if(args[i]<d){
                d=args[i];
            }
        }
        return d;
    }
}

//19.Grasshopper - Summation
//https://www.codewars.com/kata/55d24f55d7dd296eb9000030/train/javascript
var summation = function (num) {
    var n = 0;
    for(i=0;i<=num;i++){
        n += i;
    }
    return n;
}

//20.Remove String Spaces
//https://www.codewars.com/kata/57eae20f5500ad98e50002c5/train/javascript
function noSpace(x){
    var n = "";
    for(i=0;i<x.length;i++){
        if(x[i] != " "){
            n += x[i];
        }
    }
    return n;
}

//21.Square(n) Sum
//https://www.codewars.com/kata/515e271a311df0350d00000f/train/javascript
function squareSum(numbers){
    console.log(numbers);
    var n = 0;
    for(i=0;i<numbers.length;i++){
        if(numbers[i].length > 1){
            for(j=0;j<numbers[i].length;j++){
                n += numbers[j]**2;
            }
        } else {
            n += (numbers[i]**2);
        }
    }
    console.log(n);
    return n;
}

//22.Counting sheep...
//https://www.codewars.com/kata/54edbc7200b811e956000556/train/javascript
function countSheeps(arrayOfSheep) {
    var c = 0;
    for(i=0;i<arrayOfSheep.length;i++){
        if(arrayOfSheep[i] === true && arrayOfSheep[i] !== null && arrayOfSheep[i] !== undefined){
            c += 1;
        }
    }
    return c;
}

//23.Keep Hydrated!
//https://www.codewars.com/kata/582cb0224e56e068d800003c/train/javascript
function litres(time) {
    console.log(time);
    return Math.floor(time/2);
}

//24.Basic Mathematical Operations
//https://www.codewars.com/kata/57356c55867b9b7a60000bd7/train/javascript
function basicOp(operation, value1, value2)
{
    var r = 0;
    if (operation == '+'){
        r = value1 + value2;
    } else if (operation == '-'){
        r = value1 - value2;
    } else if (operation == '*'){
        r = value1 * value2;
    } else if (operation == "/"){
        r = value1 / value2;
    }
    return r;
}

//25.Convert a String to a Number!
//https://www.codewars.com/kata/544675c6f971f7399a000e79/train/javascript
var stringToNumber = function(str){
    str = Number(str);
    return str;
}

//26.Is n divisible by x and y?
//https://www.codewars.com/kata/5545f109004975ea66000086/train/javascript
function isDivisible(n, x, y) {
    if (n%x > 0 || n%y > 0){
        return false;
    }
    return true;
}

//27.Convert number to reversed array of digits
//https://www.codewars.com/kata/5583090cbe83f4fd8c000051/train/javascript
function digitize(n) {
    n = String(n);
    var ar = [];
    for(i=0;i<n.length;i++){
        ar.unshift(Number(n[i]));
    }
    return ar;
}

